  keywords   = {arterial blood pressure, Convolution, Data models, Deep learning, Estimation, Feature extraction, hemodynamic instability, Hypertension, Monitoring, photoplethysmography, self-attention, valid},
  pages      = {3697--3707},
  file       = {IEEE Xplore Abstract Record:/Users/francois/Zotero/storage/A9YVD6MC/9769903.html:text/html;IEEE Xplore Full Text PDF:/Users/francois/Zotero/storage/JQ32WXXP/Kim et al. - 2022 - DeepCNAP A Deep Learning Approach for Continuous .pdf:application/pdf}
